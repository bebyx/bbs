<%= form_with(model: var, local: true) do |form| %>

  <p>
    <%= form.label :title %><br/>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :user %><br/>
    <%= form.text_field :user, value: 'Anonymous' %>
  </p>

  <p>
    <%= form.label :message %><br/>
    <%= form.text_area :message, cols: 40, rows: 10 %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>
